---
export interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
import "../styles/global.css";
import Nav from "../components/nav.svelte";
import { SEO } from "astro-seo";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/PorkysPotOfPollution//HedgehogIcon.png" />
    <meta name="generator" content={Astro.generator} />
    <SEO
      title={title}
      description={description}
      canonical={Astro.request.url}
      noindex={false}
      nofollow={false}
      openGraph={
		{
      image: {
        url: "https://porkyproductions.github.io/PorkysPotOfPollution/logo.png",
        alt: "A poorly drawn hedgehog, with a basket next to them with some coming out of it, implying the buring of fossil fuels."
      },
			basic: {
				title: title,
				type: "website",
				image: "/PorkysPotOfPollution/logo.png",
				url: Astro.request.url
			},
			optional: {
				description: description,
				locale: "en-US",
				siteName: "Porky's Pot of Pollution"
			}
		}
	}
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Abril+Fatface&family=DM+Serif+Display:ital@0;1&family=Inter+Tight:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Merriweather:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700;1,900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <Nav client:load />
    <slot />
  </body>
</html>
