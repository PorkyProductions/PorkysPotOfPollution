---
import Layout from "./Layout.astro";
import '../styles/blog.css'
import Nav from "../components/nav.svelte";

export interface Props {
	content: {
		title: string;
		description: string;
		author: string;
		pubDate?: string;
		updatedDate?: string;
		heroImage?: string;
		rating?: number;
	};
}

const {
	content: { title, description, author, pubDate, updatedDate, heroImage, rating },
} = Astro.props;
---

<Layout title={title} description={description} />

	<body>
		<main>
			<article class="p-10">
				{heroImage && (
					<img
						width={360}
						height={360}
						src={heroImage}
						alt=""
						class="m-auto"
					/>
				)}
				<h1 class="font-bold font-headliner text-3xl p-4 underline underline-offset-1">{title}</h1>
				<h1 class="font-semibold font-primary text-2xl pl-4"><span class="font-normal">by</span> {author}</h1>
				{pubDate && <time class="p-4">{pubDate}</time>}
				{updatedDate && <div class="p-4">Last updated on <time>{updatedDate}</time></div>}
				<hr/>
				<div class="font-primary">
					<slot />
				</div>
			</article>
		</main>
		<style>
			hr {
                border-top: 1px solid #DDD;
				margin: 1rem 0;
			}
		</style>
</body>